<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.verv">

    <application
        android:name=".VerveApplication"
        android:allowBackup="true"
        android:icon="@drawable/verve"
        android:label="@string/app_name"
        android:roundIcon="@drawable/verve"
        android:supportsRtl="true"
        android:theme="@style/Theme.Verv">

        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".LoginActivity" android:exported="false" />
        <activity android:name=".RegisterActivity" android:exported="false" />
        <activity android:name=".MainActivity" android:exported="false" />
        <activity android:name=".AddMoodActivity" android:exported="false" />

    </application>

</manifest>